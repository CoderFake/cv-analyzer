# .env.example
# PostgreSQL
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/cv_analyzer
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=db
DB_PORT=5432
DB_NAME=cv_analyzer

# JWT
SECRET_KEY=your-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM=HS256

# R2 Storage
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=cv-analyzer
R2_PUBLIC_ENDPOINT=https://your-public-endpoint.r2.dev

# LLM
LLM_MODEL_PATH=/path/to/your/model
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3:7b
USE_OLLAMA=true

# App
ENVIRONMENT=dev
DEBUG=true
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json